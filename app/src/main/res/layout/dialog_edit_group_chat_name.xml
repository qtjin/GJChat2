<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        xmlns:card="http://schemas.android.com/apk/res-auto"
        android:layout_width="260dp"
        android:layout_height="165dp"
        android:orientation="vertical"
        card:cardBackgroundColor="@android:color/white"
        card:cardCornerRadius="10dp"
        card:cardElevation="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:text="新建群聊"
                android:gravity="center"
                android:textColor="@color/text_color323232"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/tv_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:text="请为新群输入名称"
                android:gravity="center"
                android:textColor="@color/text_72"
                android:layout_marginTop="8dp"
                />

            <EditText
                android:id="@+id/et_group_chat_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_frame"
                android:layout_marginTop="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/main_line_color"
                android:alpha="90"
                android:layout_marginTop="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_size_14"
                    android:text="取消"
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/main_line_color"
                    android:alpha="90"
                    />
                <TextView
                    android:id="@+id/tv_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_size_14"
                    android:text="确定"
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line"
            android:layout_marginTop="20dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <ImageView
                android:id="@+id/iv_userhead"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:src="@drawable/ic_userhead_default" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_333333"
                android:text="姓名"
                android:layout_toRightOf="@+id/iv_userhead"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:id="@+id/tv_wechat_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_333333"
                android:text="微信号:"
                android:layout_toRightOf="@+id/iv_userhead"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                />
        </RelativeLayout>

        <include layout="@layout/layout_gray_line"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/tv_album"
            android:textSize="16sp"
            android:textColor="@color/text_333333"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_me_photo"
            android:text="相册" />

        <include layout="@layout/layout_gray_line"/>

        <TextView
            android:id="@+id/tv_collect"
            android:textSize="16sp"
            android:textColor="@color/text_333333"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_me_collect"
            android:text="收藏" />

        <include layout="@layout/layout_gray_line"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/tv_money"
            android:textSize="16sp"
            android:textColor="@color/text_333333"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_me_money"
            android:text="钱包" />

        <include layout="@layout/layout_gray_line"/>

        <TextView
            android:id="@+id/tv_card"
            android:textSize="16sp"
            android:textColor="@color/text_333333"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_me_card"
            android:text="卡包" />

        <include layout="@layout/layout_gray_line"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/tv_smile"
            android:textSize="16sp"
            android:textColor="@color/text_333333"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_me_smile"
            android:text="表情" />

        <include layout="@layout/layout_gray_line"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/tv_setting"
            android:textSize="16sp"
            android:textColor="@color/text_333333"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_me_setting"
            android:text="设置" />

        <include layout="@layout/layout_gray_line"/>
    </LinearLayout>
</ScrollView>